{extend name="layout/matrix" /}

{block name="css"}
    <!--表格css-->
    {include file="slot/DataTables/css" /}
    <!--时间选择器css-->
    {include file="slot/DateRange/css" /}
{/block}

{block name="main-header"}
    <section class="content-header">
        <h1>
            代理商列表
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{:url('/')}"><i class="fa fa-home"></i> 首页</a></li>
            <li class="active">代理商列表</li>
        </ol>
    </section>
{/block}

{block name="main"}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <!-- box-header -->
                    <div class="box-header ">
                        <div class="box-search">
                            <form id="formSearch" class="form-horizontal" method="POST" action="{:url('agent')}">

                                <!--多功能输入框-->
                                {include file="slot/InputGroup/input_group" field="$inputGroupField" col_sm='3'/}

                                <!--时间选择器-->
                                {include file="slot/DateRange/date_range" title_type='search' title='注册时间' col_sm='4' /}

                                <div class="search-input col-sm-1">
                                    <button type="button" onclick="doSearch()" id="searchBtn" class="btn btn-block btn-info" value="查询">查询</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- /.box-header -->

                    <div class="box-tools">
                        <a href="{:url('agent/create')}" class="btn bg-aqua margin">添加代理</a>
                    </div>
                    <!-- /.box-tools -->

                    <div class="box-body">
                        <table id="tables" class="table table-bordered table-striped" data-url="{:url('agent')}">
                            <thead>
                            <tr>
                                <th data-name="id" data-sort="true">ID</th>
                                <th data-name="name">名称</th>
                                <th data-name="contacts">联系人</th>
                                <th data-name="contact_phone">手机号码</th>
                                <th data-name="email" data-sort="true" data-default-sort="desc">E-mail</th>
                                <th data-name="create_time">注册时间</th>
                                <th data-name="">操作</th>
                            </tr>
                            </thead>
                            <tbody>

                            </tbody>
                            <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>名称</th>
                                <th>联系人</th>
                                <th>手机号码</th>
                                <th>E-mail</th>
                                <th>注册时间</th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
{/block}

{block name="script"}
    <!--表格js-->
    {include file="slot/DataTables/script"/}
    <!--时间选择器js-->
    {include file="slot/DateRange/script" start_date='' end_date='' date_limit='60'/}
    <!--多功能输入框js-->
    {include file="slot/InputGroup/script"/}
    <script>
        /**
         * DataTables 初始化
         */
        var tables = DataTableLoad();

        /**
         * 重构 操作按钮
         *
         * @param data
         * @param type
         * @param row
         * @returns {string}
         */
        function getButton(data,type,row)
        {
            var html = '';
            html += '<a href="agent/create" class="btn btn-success btn-xs data-tables data-tables-create"><span class="glyphicon glyphicon-plus"></span>添加</a>';
            html += '<a href="agent/'+data.id+'/edit" class="btn btn-primary btn-xs data-tables data-tables-edit"><span class="glyphicon glyphicon-edit"></span>编辑</a>';
            html += '<a href="agent/delete/'+data.id+'" class="btn btn-danger btn-xs data-tables data-tables-delete"><span class="glyphicon glyphicon-trash"></span>删除</a>';
            return html;
        }
    </script>
{/block}