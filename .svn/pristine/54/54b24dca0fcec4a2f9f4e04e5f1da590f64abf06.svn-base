{extend name="layout/matrix" /}

{block name="css"}
<!--下拉框css-->
{include file="slot/Select/css"/}
{/block}

{block name="main-header"}
<section class="content-header">
    <h1>
        编辑商户
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{:url('/')}"><i class="fa fa-home"></i> 首页</a></li>
        <li class="active">编辑商户</li>
    </ol>
</section>
{/block}

{block name="main"}
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-info">
                <!--<div class="box-header with-border">-->
                <!--<h3 class="box-title">标题</h3>-->
                <!--</div>-->
                <!-- /.box-header -->
                <!-- form start -->
                <form role="form">
                    <div class="box-body">

                        <!--普通下拉框-->
                        {include
                        file="slot/Select/select"
                        title='所属代理'
                        name='select'
                        selected='2'
                        options="[['name'=>'河北总代理','value'=>1],['name'=>'北京总代理','value'=>2],['name'=>'泰国总代理','value'=>3]]" /}

                        <div class="form-group">
                            <label for="exampleInputEmail1">名称</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="名称">
                        </div>
                        <div class="form-group">
                            <label >联系人</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-user"></i>
                                </div>
                                <input type="text" class="form-control" placeholder="联系人">
                            </div>
                        </div>
                        <div class="form-group">
                            <label >联系电话</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-phone"></i>
                                </div>
                                <input type="text" class="form-control">
                            </div>
                        </div>

                        <!--普通下拉框-->
                        {include
                        file="slot/Select/select"
                        title='性质'
                        name='select'
                        selected='2'
                        options="[['name'=>'集团','value'=>1],['name'=>'公司','value'=>2],['name'=>'个体','value'=>3]]" /}

                        <!--省市县三级联动-->
                        {include
                        file="slot/DistPicker/dist_picker"
                        title='地区'
                        province='province'
                        city='city'
                        district='district'/}

                        <!-- textarea -->
                        <div class="form-group">
                            <label>经营范围</label>
                            <textarea class="form-control" rows="3" placeholder=""></textarea>
                        </div>
                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <a class="btn btn-default" href="javaScript:history.back(-1)">取消</a>
                        <button type="submit" class="btn btn-info pull-right">提交</button>
                    </div>
                </form>
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>
{/block}

{block name="script"}
<!--省市县三级联动js-->
{include file="slot/DistPicker/script"/}

<!--下拉框js-->
{include file="slot/Select/script"/}

{/block}